<?xml version="1.0"?>
<config>
	<modules>
		<Magentothem_Designer>
			<version>0.0.1</version>
		</Magentothem_Designer>
	</modules>
	<frontend>
		<routers>
			<designer>
				<use>standard</use> 
				<args> 
					<module>Magentothem_Designer</module> 
					<frontName>designer</frontName> 
				</args>
			</designer> 
		</routers>
		<layout>
			<updates>
				<designer>
					<file>mt_designer.xml</file>
				</designer>
			</updates>
		</layout>
	</frontend>
	<admin>
		<routers>
			<designer>
				<use>admin</use>
				<args>
					<module>Magentothem_Designer</module> 
					<frontName>designer</frontName> 
				</args>
			</designer>
		</routers>
	</admin>
	<adminhtml>
	    <menu>
            <magentothem module="designer">
                <title>Magentothem</title>
                <sort_order>89</sort_order>           
                <children>
                    <designer translate="title" module="designer">
                        <title>Designer</title>
                        <sort_order>2</sort_order>
                        <children>
							<items translate="title" module="designer">
								<title>Manage Designer</title>
								<sort_order>0</sort_order>
								<action>designer/adminhtml_designer</action>
							</items>
                            <configuration>
                                <title>Configuration</title>
                                <sort_order>1</sort_order>
                                <action>adminhtml/system_config/edit/section/designer</action>
                            </configuration>
							<installs translate="title" module="designer">
								<title>Designer Install</title>
								<sort_order>2</sort_order>
								<action>designer/adminhtml_install</action>
							</installs>
                        </children>
                    </designer>
               </children>
            </magentothem>
        </menu>
		<acl>
			<resources>
			    <all>
                    <title>Allow Everything</title>
                </all>
				<admin>
					<children>
						<designer>
							<title>Designer Module</title>
							<sort_order>10</sort_order>
							<children>
								<items>
									<title>Manage Designer</title>
									<sort_order>0</sort_order>									
								</items>
								<configuration>
									<title>Configuration</title>
									<sort_order>1</sort_order>
								</configuration>
								<installs>
									<title>Designer Install</title>
									<sort_order>2</sort_order>
								</installs>
							</children>
						</designer>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<designer>
					<file>mt_designer.xml</file>
				</designer>
			</updates>
		</layout>
	</adminhtml>
	<global>
	    <models>
            <designer>
                <class>Magentothem_Designer_Model</class>
                <resourceModel>designer_mysql4</resourceModel>
            </designer>
            <designer_mysql4>
                <class>Magentothem_Designer_Model_Mysql4</class>
                <entities>
                    <designer>
                        <table>magentothem_designer</table>
                    </designer>
                </entities>
            </designer_mysql4>
        </models>
	    <resources>
            <designer_setup>
                <setup>
                    <module>Magentothem_Designer</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </designer_setup>
            <designer_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </designer_write>
            <designer_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </designer_read>
        </resources>
	    <blocks>
            <designer>
                <class>Magentothem_Designer_Block</class>
            </designer>
        </blocks>
		<helpers>
			<designer>
				<class>Magentothem_Designer_Helper</class>
			</designer>
		</helpers>
	</global>
	<default>
		<designer>
			<designer_config>
				<enabled>1</enabled>
			</designer_config>
		</designer>
	</default>
</config>